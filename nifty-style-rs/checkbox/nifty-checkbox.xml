<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <style id="nifty-checkbox-style#panel">
    <attributes align="center" valign="center" width="23px" height="23px" childLayout="center" backgroundColor="#0000" backgroundImage="checkbox/checkbox.png" />
  </style>
  
  <style id="nifty-checkbox-style#select">
    <attributes align="center" valign="center" width="23px" height="23px" />
    <effect overlay="true">
      <onCustom customKey="show" name="fade" start="#0" end="#f" length="250" post="true" />
      <onCustom customKey="show" name="imageOverlay" filename="checkbox/checkbox-checked.png" width="23px" height="23px" post="true" neverStopRendering="true" />
      <onCustom customKey="hide" name="fade" start="#f" end="#0" length="250" post="true" />
      <onCustom customKey="hide" name="imageOverlay" filename="checkbox/checkbox-checked.png" width="23px" height="23px" post="true" length="250" />
      <onEnabled name="fade" start="#4" end="#f" length="150" post="false" />
      <onDisabled name="fade" start="#f" end="#4" length="150" post="false" />
    </effect>
  </style>
</nifty-styles>
